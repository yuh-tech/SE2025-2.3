<%- include('partials/header') %>

<% if (error) { %>
  <div class="alert error"><%= error %></div>
<% } %>

<h2>Đăng nhập bằng tài khoản local</h2>
<form method="POST" action="/login" class="local-form">
  <input type="text" name="username" placeholder="Tên đăng nhập" required />
  <input type="password" name="password" placeholder="Mật khẩu" required />
  <button type="submit">Đăng nhập</button>
</form>

<div class="oauth-divider">
  <span>HOẶC</span>
</div>

<div class="oauth-buttons">
  <!-- Nút Google OAuth -->
  <a href="/auth/google" class="btn oauth-btn google">
    <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google" width="20" />
    Đăng nhập bằng Google
  </a>

  <!-- Nút Email OAuth (nếu có) -->
  <a href="/auth/email" class="btn oauth-btn email">
    <img src="https://www.svgrepo.com/show/475656/email-icon.svg" alt="Email" width="20" />
    Đăng nhập bằng Email
  </a>
</div>

<p>Chưa có tài khoản? <a href="/signup">Đăng ký ngay</a></p>

<%- include('partials/footer') %>