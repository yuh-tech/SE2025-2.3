// Prisma schema for Resource Server (business domain) using MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("RESOURCE_DATABASE_URL")
}

model Profile {
  id          String   @id @default(uuid())
  userId      String   @unique   // sub from IdP
  displayName String?
  avatarUrl   String?
  bio         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model Order {
  id        String   @id @default(uuid())
  userId    String   // sub from IdP
  total     Int
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

