<%- include('partials/header') %>

<div class="container" style="max-width: 900px; margin: 30px auto;">
  <h1 style="margin-bottom: 16px;">Yêu cầu hoàn hàng</h1>

  <div style="background:#fff;border-radius:16px;padding:18px;box-shadow:0 8px 24px rgba(0,0,0,.06);">
    <div style="display:flex;justify-content:space-between;gap:12px;flex-wrap:wrap;">
      <div><b>Mã đơn:</b> #<%= order.id %></div>
      <div><b>Tổng tiền:</b> <%= Number(order.total||0).toLocaleString('vi-VN') %> ₫</div>
      <div><b>Trạng thái:</b> <%= order.status %></div>
    </div>

    <hr style="border:none;border-top:1px solid #eee;margin:16px 0;"/>

    <% items.forEach(it => { %>
      <div style="display:flex;gap:14px;align-items:center;padding:12px 0;border-bottom:1px solid #f1f1f1;">
        <img src="<%= it.image || '' %>" style="width:64px;height:64px;border-radius:12px;object-fit:cover;background:#f3f3f3;" />
        <div style="flex:1;">
          <div style="font-weight:700;"><%= it.name || ('Sản phẩm #' + it.product_id) %></div>
          <div style="color:#777;font-size:13px;">
            Phân loại: <%= it.color || '-' %> / <%= it.size || '-' %> · SL: <%= it.quantity || 1 %>
          </div>
        </div>
      </div>
    <% }) %>

    <form method="POST" action="/orders/<%= order.id %>/return" style="margin-top:16px;">
      <label style="font-weight:700;display:block;margin-bottom:8px;">Lý do hoàn hàng</label>
      <textarea name="reason" rows="4" placeholder="Ví dụ: Không đúng mô tả, lỗi sản phẩm, đổi size..."
        style="width:100%;padding:12px;border-radius:12px;border:1px solid #ddd;outline:none;"></textarea>

      <div style="display:flex;gap:10px;justify-content:flex-end;margin-top:14px;flex-wrap:wrap;">
        <a href="/orders/<%= order.id %>" class="btn btn-outline">Quay lại chi tiết đơn</a>
        <button type="submit" class="btn btn-primary">Gửi yêu cầu hoàn</button>
      </div>
    </form>
  </div>
</div>

<style>
  .btn{padding:12px 18px;border-radius:999px;text-decoration:none;border:none;cursor:pointer;font-weight:700}
  .btn-primary{background:#ff6b9d;color:#fff}
  .btn-outline{background:#fff;border:2px solid #ff6b9d;color:#ff6b9d}
</style>

<%- include('partials/footer') %>
